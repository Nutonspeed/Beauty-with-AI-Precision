# ===========================================
# SUPABASE CONFIGURATION
# ===========================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# ===========================================
# AI SERVICES
# ===========================================
OPENAI_API_KEY=sk-...
GOOGLE_VISION_API_KEY=AIza...
SKIN_ANALYSIS_API_URL=https://api.skin-analysis.com/v1
SKIN_ANALYSIS_API_KEY=your_skin_analysis_key

# ===========================================
# AUTHENTICATION
# ===========================================
NEXTAUTH_SECRET=your-super-secret-key-here
NEXTAUTH_URL=https://beauty-with-ai-precision.vercel.app

# ===========================================
# STORAGE & CDN
# ===========================================
AWS_S3_BUCKET=beauty-with-ai-precision-assets
AWS_ACCESS_KEY_ID=AKIA...
AWS_SECRET_ACCESS_KEY=...
AWS_REGION=ap-southeast-1

# ===========================================
# EMAIL SERVICES
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@beautyclinic.com
FROM_NAME=Beauty with AI Precision

# ===========================================
# PAYMENT GATEWAY
# ===========================================
STRIPE_PUBLISHABLE_KEY=pk_live_...
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...

# ===========================================
# ANALYTICS & MONITORING
# ===========================================
GOOGLE_ANALYTICS_ID=G-...
VERCEL_ANALYTICS_ID=...
SENTRY_DSN=https://...@sentry.io/...

# ===========================================
# DEVELOPMENT & DEBUG
# ===========================================
NODE_ENV=production
LOG_LEVEL=info
DEBUG_MODE=false

# ===========================================
# FEATURE FLAGS
# ===========================================
ENABLE_AR_FEATURES=true
ENABLE_AI_ANALYSIS=true
ENABLE_REAL_TIME_CHAT=true
ENABLE_VIDEO_CALLS=false

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900000

# ===========================================
# CACHE SETTINGS
# ===========================================
REDIS_URL=redis://...
CACHE_TTL=3600

# ===========================================
# THIRD-PARTY INTEGRATIONS
# ===========================================
CALENDLY_API_KEY=...
ZOOM_API_KEY=...
TWILIO_ACCOUNT_SID=...
TWILIO_AUTH_TOKEN=...

# ===========================================
# SECURITY
# ===========================================
CORS_ORIGIN=https://beauty-with-ai-precision.vercel.app
ALLOWED_ORIGINS=https://beauty-with-ai-precision.vercel.app,https://admin.beautyclinic.com
SECURE_COOKIES=true
CSRF_SECRET=your-csrf-secret
