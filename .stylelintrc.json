{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-recommended"
  ],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "variants",
          "responsive",
          "screen"
        ]
      }
    ],
    "selector-class-pattern": null,
    "no-empty-source": null
  },
  "ignoreFiles": [
    "dist/**/*",
    ".next/**/*",
    "node_modules/**/*"
  ]
}
