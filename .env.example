###############################################
# Environment Variables Example
# Copy this file to .env.local and fill values.
###############################################

# Sentry monitoring (set real DSN in production)
NEXT_PUBLIC_SENTRY_DSN="https://your-sentry-dsn@oX.ingest.sentry.io/project"

# Supabase (replace with your project credentials)
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"

# Optional: Analytics sampling / feature flags
NEXT_PUBLIC_ANALYTICS_ENABLED="true"

# Node environment override (do not set in production manually)
# NODE_ENV="development"

# Add further secrets only in Vercel dashboard (never commit real secrets here)
# e.g. SUPABASE_SERVICE_ROLE_KEY, STRIPE_SECRET_KEY, OPENAI_API_KEY

###############################################
# Notes:
# - instrumentation.ts checks NEXT_PUBLIC_SENTRY_DSN validity before enabling Sentry.
# - Leave the placeholder if you don't want Sentry active locally.
# - For production: set NEXT_PUBLIC_SENTRY_DSN in Vercel > Project Settings > Environment Variables.
################################################ Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL="your-supabase-url"
SUPABASE_URL="your-supabase-url"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# NextAuth.js Configuration
NEXTAUTH_SECRET="your-nextauth-secret"
NEXTAUTH_URL="http://localhost:3000"

# Google Cloud Vision API Configuration
GOOGLE_APPLICATION_CREDENTIALS="path/to/your/google-credentials.json"
GOOGLE_CLOUD_PROJECT_ID="your-google-cloud-project-id"

# Google Gemini API Configuration (FREE 1,500 requests/day)
# Get your free API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY="your-gemini-api-key"

# Hugging Face API Configuration (FREE tier)
# Get your token from: https://huggingface.co/settings/tokens
# Required for AI skin analysis features
HUGGINGFACE_TOKEN="your-huggingface-token"

# ========================================
# AI SKIN ANALYSIS SERVICE (Local Python Service)
# ========================================
# URL of the Python FastAPI service for skin analysis
AI_SERVICE_URL="http://localhost:8000"

# Phase 14: AI Gateway Multi-Model Integration
# OpenAI GPT-4o (45% weight) - Best at detailed analysis
OPENAI_API_KEY="your-openai-api-key"

# Anthropic Claude 3.5 Sonnet (40% weight) - Best at structured reasoning
ANTHROPIC_API_KEY="your-anthropic-api-key"

# Vercel AI Gateway Configuration
AI_GATEWAY_ENABLED=true

# ========================================
# PAYMENT GATEWAY (Stripe)
# ========================================
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"
# Webhook secret from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET="whsec_your-webhook-secret"

# ========================================
# EMAIL & SMS NOTIFICATIONS
# ========================================
# Resend API for sending emails (FREE: 3,000 emails/month)
# Get your free API key from: https://resend.com/api-keys
RESEND_API_KEY="re_your-resend-api-key"
EMAIL_FROM="noreply@yourdomain.com"

# Twilio SMS Configuration (Pay-as-you-go: ~à¸¿1/SMS)
# Get from: https://www.twilio.com/console
TWILIO_ACCOUNT_SID="ACxxxxx"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+66812345678"

# ========================================
# ERROR MONITORING & PERFORMANCE (Task 9)
# ========================================
# Sentry DSN (optional, for production error tracking)
NEXT_PUBLIC_SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"

# Enable performance monitoring (false in development, true in production)
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=false

# ========================================
# APPLICATION SETTINGS
# ========================================
# Application URL
NEXT_PUBLIC_APP_URL="http://localhost:3000"
\n+# Public site canonical base URL (used for JSON-LD absolute URLs, OG images)
NEXT_PUBLIC_SITE_URL="https://your-production-domain.com"

# Default locale (th or en)
NEXT_PUBLIC_DEFAULT_LOCALE="th"

# ========================================
# FEATURE FLAGS
# ========================================
# Enable/disable features
NEXT_PUBLIC_ENABLE_AR_FEATURES=true
NEXT_PUBLIC_ENABLE_VIDEO_CALLS=true
NEXT_PUBLIC_ENABLE_LIVE_CHAT=true
NEXT_PUBLIC_ENABLE_LOYALTY_PROGRAM=true
NEXT_PUBLIC_ENABLE_MARKETING_CAMPAIGNS=true

# ========================================
# SECURITY & RATE LIMITING
# ========================================
# API rate limit (requests per minute)
API_RATE_LIMIT=100

# Max file upload size in MB
MAX_FILE_SIZE_MB=10

# Allowed file types (comma-separated)
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/webp"
